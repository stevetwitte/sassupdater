<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="sassupdater.Controller" xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Button text="sass file" onAction="#onClickSassFile" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Text fx:id="sassFileText" text="sassfile.sass" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button text="css file" onAction="#onClickCssFile" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Text fx:id="cssFileText" text="cssfile.css" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="Add File to List" onAction="#onClickAddFileModel" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <VBox fx:id="listOfAddedFiles" GridPane.columnIndex="0" GridPane.rowIndex="3"></VBox>

</GridPane>